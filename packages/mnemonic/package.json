{
    "name": "@zera-ts/mnemonic",
    "version": "0.0.1",
    "description": "A user-friendly library for generating, validating, and manipulating BIP39 mnemonics in Zera, supporting multiple languages and entropies.",
    "license": "Apache-2.0",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "sideEffects": false,
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "publishConfig": {
        "main": "./dist/index.js",
        "module": "./dist/index.mjs",
        "types": "./dist/index.d.ts",
        "exports": {
            ".": {
                "import": "./dist/index.mjs",
                "require": "./dist/index.js",
                "types": "./dist/index.d.ts"
            }
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "dependencies": {
        "@noble/hashes": "1.3.0",
        "@zera-ts/bytes": "workspace:*",
        "@zera-ts/wordlists": "workspace:*"
    },
    "devDependencies": {
        "tsup": "6.7.0"
    },
    "scripts": {
        "build": "tsup --dts",
        "test": "vitest run",
        "watch": "tsup --watch --dts"
    },
    "typedoc": {
        "entryPoint": "./src/index.ts"
    }
}
